    <!-- JavaScript -->
    <script>
        // Sample match data
        const matches = [
            {
                id: 1,
                sport: "football",
                league: "Premier League",
                homeTeam: "Manchester City",
                awayTeam: "Liverpool",
                homeScore: 2,
                awayScore: 1,
                status: "live",
                minute: "65'",
                homeOdds: 2.10,
                drawOdds: 3.40,
                awayOdds: 3.20,
                time: "Today, 15:00"
            },
            {
                id: 2,
                sport: "football",
                league: "La Liga",
                homeTeam: "Real Madrid",
                awayTeam: "Barcelona",
                homeScore: null,
                awayScore: null,
                status: "upcoming",
                minute: null,
                homeOdds: 2.30,
                drawOdds: 3.50,
                awayOdds: 3.00,
                time: "Tomorrow, 20:00"
            },
            {
                id: 3,
                sport: "basketball",
                league: "NBA",
                homeTeam: "LA Lakers",
                awayTeam: "Golden State",
                homeScore: 98,
                awayScore: 95,
                status: "finished",
                minute: null,
                homeOdds: 1.90,
                awayOdds: 1.95,
                drawOdds: null,
                time: "Final"
            },
            {
                id: 4,
                sport: "football",
                league: "Serie A",
                homeTeam: "AC Milan",
                awayTeam: "Inter Milan",
                homeScore: 1,
                awayScore: 2,
                status: "finished",
                minute: null,
                homeOdds: 2.70,
                drawOdds: 3.20,
                awayOdds: 2.60,
                time: "Yesterday"
            },
            {
                id: 5,
                sport: "tennis",
                league: "Australian Open",
                homeTeam: "Novak Djokovic",
                awayTeam: "Carlos Alcaraz",
                homeScore: null,
                awayScore: null,
                status: "upcoming",
                minute: null,
                homeOdds: 1.80,
                awayOdds: 2.05,
                drawOdds: null,
                time: "Jan 19, 08:00"
            },
            {
                id: 6,
                sport: "football",
                league: "Bundesliga",
                homeTeam: "Bayern Munich",
                awayTeam: "Dortmund",
                homeScore: null,
                awayScore: null,
                status: "upcoming",
                minute: null,
                homeOdds: 1.65,
                drawOdds: 4.00,
                awayOdds: 5.20,
                time: "Jan 20, 17:30"
            }
        ];

        // DOM Elements
        const matchesGrid = document.getElementById('matchesGrid');
        const filterTabs = document.querySelectorAll('.filter-tab');
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const navLinks = document.getElementById('navLinks');

        // Render matches
        function renderMatches(sport = 'all') {
            matchesGrid.innerHTML = '';
            
            const filteredMatches = sport === 'all' 
                ? matches 
                : matches.filter(match => match.sport === sport);
            
            filteredMatches.forEach(match => {
                const matchCard = document.createElement('div');
                matchCard.className = 'match-card';
                
                // Get status class
                let statusClass = '';
                let statusText = '';
                switch(match.status) {
                    case 'live':
                        statusClass = 'status-live';
                        statusText = `LIVE ${match.minute}`;
                        break;
                    case 'upcoming':
                        statusClass = 'status-upcoming';
                        statusText = 'UPCOMING';
                        break;
                    case 'finished':
                        statusClass = 'status-finished';
                        statusText = 'FINISHED';
                        break;
                }
                
                // Get sport icon
                let sportIcon = '';
                switch(match.sport) {
                    case 'football':
                        sportIcon = 'fas fa-futbol';
                        break;
                    case 'basketball':
                        sportIcon = 'fas fa-basketball-ball';
                        break;
                    case 'tennis':
                        sportIcon = 'fas fa-baseball-ball';
                        break;
                }
                
                matchCard.innerHTML = `
                    <div class="match-header">
                        <div class="match-league">
                            <i class="${sportIcon}"></i>
                            <span>${match.league}</span>
                        </div>
                        <div class="match-status ${statusClass}">${statusText}</div>
                    </div>
                    
                    <div class="teams-container">
                        <div class="team">
                            <div class="team-logo">${match.homeTeam.substring(0, 2)}</div>
                            <div class="team-name">${match.homeTeam}</div>
                            ${match.homeScore !== null ? `<div class="team-score">${match.homeScore}</div>` : ''}
                        </div>
                        
                        <div class="match-vs">
                            <div class="vs-text">VS</div>
                            <div class="match-time">${match.time}</div>
                        </div>
                        
                        <div class="team">
                            <div class="team-logo away">${match.awayTeam.substring(0, 2)}</div>
                            <div class="team-name">${match.awayTeam}</div>
                            ${match.awayScore !== null ? `<div class="team-score">${match.awayScore}</div>` : ''}
                        </div>
                    </div>
                    
                    <div class="match-odds">
                        <div class="odd-item">
                            <div class="odd-label">1</div>
                            <div class="odd-value">${match.homeOdds.toFixed(2)}</div>
                        </div>
                        ${match.drawOdds ? `
                        <div class="odd-item">
                            <div class="odd-label">X</div>
                            <div class="odd-value">${match.drawOdds.toFixed(2)}</div>
                        </div>
                        ` : ''}
                        <div class="odd-item">
                            <div class="odd-label">2</div>
                            <div class="odd-value">${match.awayOdds.toFixed(2)}</div>
                        </div>
                    </div>
                    
                    <button class="predict-btn" onclick="predictMatch(${match.id})">
                        <i class="fas fa-bullseye"></i> Make Prediction
                    </button>
                `;
                
                matchesGrid.appendChild(matchCard);
            });
            
            // If no matches
            if (filteredMatches.length === 0) {
                matchesGrid.innerHTML = `
                    <div style="grid-column: 1 / -1; text-align: center; padding: 40px;">
                        <i class="fas fa-inbox" style="font-size: 48px; color: #9CA3AF; margin-bottom: 20px;"></i>
                        <h3 style="color: #6B7280; margin-bottom: 10px;">No Matches Found</h3>
                        <p style="color: #9CA3AF;">Try selecting a different sport filter</p>
                    </div>
                `;
            }
        }

        // Filter functionality
        filterTabs.forEach(tab => {
            tab.addEventListener('click', () => {
                // Remove active class from all tabs
                filterTabs.forEach(t => t.classList.remove('active'));
                // Add active class to clicked tab
                tab.classList.add('active');
                // Get sport filter
                const sport = tab.getAttribute('data-sport');
                // Render matches with filter
                renderMatches(sport);
            });
        });

        // Mobile menu toggle
        mobileMenuBtn.addEventListener('click', () => {
            navLinks.classList.toggle('active');
            mobileMenuBtn.innerHTML = navLinks.classList.contains('active') 
                ? '<i class="fas fa-times"></i>' 
                : '<i class="fas fa-bars"></i>';
        });

        // Close mobile menu when clicking a link
        document.querySelectorAll('.nav-links a').forEach(link => {
            link.addEventListener('click', () => {
                navLinks.classList.remove('active');
                mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
            });
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Prediction function
        function predictMatch(matchId) {
            const match = matches.find(m => m.id === matchId);
            if (match) {
                alert(`Making prediction for: ${match.homeTeam} vs ${match.awayTeam}\n\nRedirecting to prediction page...`);
                // In a real app, this would redirect to a prediction page
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            renderMatches();
            
            // Update live match timer
            setInterval(() => {
                const liveMatches = matches.filter(m => m.status === 'live');
                liveMatches.forEach(match => {
                    // Simulate minute increase
                    if (match.minute) {
                        const currentMinute = parseInt(match.minute);
                        if (currentMinute < 90) {
                            match.minute = (currentMinute + 1) + "'";
                        }
                    }
                });
                
                // Re-render if we're on the all sports tab
                const activeTab = document.querySelector('.filter-tab.active');
                if (activeTab && activeTab.getAttribute('data-sport') === 'all') {
                    renderMatches('all');
                }
            }, 30000); // Update every 30 seconds
        });

        // Add some interactivity
        document.addEventListener('DOMContentLoaded', () => {
            // Add click animation to match cards
            document.addEventListener('click', (e) => {
                if (e.target.closest('.match-card')) {
                    const card = e.target.closest('.match-card');
                    card.style.transform = 'scale(0.98)';
                    setTimeout(() => {
                        card.style.transform = '';
                    }, 200);
                }
            });
        });
    </script>
</body>
</html>
