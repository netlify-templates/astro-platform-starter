<script>
function sendWhatsApp() {
    window.open('https://wa.me/212600000000?text=السلام عليكم، أريد طلب وجبة من مطعم تيك تاك');
}
function order(item) {
    window.open('https://wa.me/212600000000?text=أريد طلب: ' + item);
}
</script>

<script>
function payNow(method) {
    if(method === 'card') {
        window.open('https://example.com/pay-with-card');
    } else if(method === 'paypal') {
        window.open('https://www.paypal.com');
    } else if(method === 'cod') {
        alert('تم اختيار الدفع عند الاستلام. سيتم التواصل معكم لتأكيد الطلب.');
    }
}
</script>
