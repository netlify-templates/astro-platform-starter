<script>
const WHATSAPP = "972528757615";

function buildText(){
  return `
הצעת מחיר – G.Z Balloons

שם לקוח: ${name.value}
יצירת קשר: ${contact.value}

תאריך הגעה: ${date.value}
שעה רצויה: ${time.value}
כתובת: ${address.value}

צבעים: ${color1.value} + ${color2.value}
`;
}

function sendWhatsApp(){
  const text = encodeURIComponent(buildText());
  window.open(`https://wa.me/${WHATSAPP}?text=${text}`,"_blank");
}

function sendEmail(){
  const subject = encodeURIComponent("הצעת מחיר – G.Z Balloons");
  const body = encodeURIComponent(buildText());
  window.location.href = `mailto:?subject=${subject}&body=${body}`;
}
</script>

