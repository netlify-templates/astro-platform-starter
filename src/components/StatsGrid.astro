---
interface Stat {
    label: string;
    value: string;
}

interface Props {
    stats: Stat[];
}

const { stats } = Astro.props;
---

<div class="grid grid-cols-2 md:grid-cols-4 gap-6 sm:gap-8">
    {stats.map(stat => (
        <div class="text-center">
            <div class="text-3xl sm:text-4xl font-bold text-primary mb-2">
                {stat.value}
            </div>
            <div class="text-sm sm:text-base text-muted">
                {stat.label}
            </div>
        </div>
    ))}
</div>
