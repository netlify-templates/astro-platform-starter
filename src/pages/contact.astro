---
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
---

<Layout title="Contact Us - Bengals Cricket Club">
    <h1 class="text-4xl sm:text-5xl font-bold mb-8">Get in Touch</h1>

    <div class="grid md:grid-cols-2 gap-8 sm:gap-12">
        <Section>
            <h2 class="text-2xl sm:text-3xl font-bold mb-6">Send Us a Message</h2>
            <form class="space-y-6">
                <div>
                    <label for="name" class="block text-sm font-medium mb-2">Name</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        required
                        class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent text-gray-900 placeholder-gray-400"
                        placeholder="Your name"
                    />
                </div>

                <div>
                    <label for="email" class="block text-sm font-medium mb-2">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent text-gray-900 placeholder-gray-400"
                        placeholder="your.email@example.com"
                    />
                </div>

                <div>
                    <label for="message" class="block text-sm font-medium mb-2">Message</label>
                    <textarea
                        id="message"
                        name="message"
                        required
                        rows="6"
                        class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent text-white placeholder-white/50 resize-none"
                        placeholder="Tell us about your interest in joining or your questions..."
                    ></textarea>
                </div>

                <button type="submit" class="btn btn-lg w-full">
                    Send Message
                </button>
            </form>
        </Section>

        <div class="space-y-8">
            <Section>
                <h2 class="text-2xl sm:text-3xl font-bold mb-6">Contact Information</h2>
                <div class="space-y-6">
                    <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
                        <h3 class="text-lg font-semibold text-primary mb-2">Email</h3>
                        <a href="mailto:bengalscc@gmail.com" class="text-gray-800 hover:text-primary transition-colors">
                            bengalscc@gmail.com
                        </a>
                    </div>

                    <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
                        <h3 class="text-lg font-semibold text-primary mb-2">Location</h3>
                        <p class="text-gray-800">Bay Area, California</p>
                    </div>
                </div>
            </Section>

            <Section>
                <h2 class="text-2xl sm:text-3xl font-bold mb-6">Follow Us</h2>
                <div class="space-y-4">
                    <a
                        href="https://instagram.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center gap-3 p-4 bg-gray-50 border border-gray-200 rounded-lg hover:bg-gray-100 hover:border-primary transition-colors"
                    >
                        <span class="text-2xl">ðŸ“·</span>
                        <div>
                            <div class="font-semibold">Instagram</div>
                            <div class="text-sm text-gray-600">Photos and highlights</div>
                        </div>
                    </a>

                    <a
                        href="https://facebook.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center gap-3 p-4 bg-gray-50 border border-gray-200 rounded-lg hover:bg-gray-100 hover:border-primary transition-colors"
                    >
                        <span class="text-2xl">ðŸ“˜</span>
                        <div>
                            <div class="font-semibold">Facebook</div>
                            <div class="text-sm text-gray-600">Updates and events</div>
                        </div>
                    </a>

                    <a
                        href="https://youtube.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center gap-3 p-4 bg-gray-50 border border-gray-200 rounded-lg hover:bg-gray-100 hover:border-primary transition-colors"
                    >
                        <span class="text-2xl">ðŸŽ¥</span>
                        <div>
                            <div class="font-semibold">YouTube</div>
                            <div class="text-sm text-gray-600">Match videos</div>
                        </div>
                    </a>
                </div>
            </Section>
        </div>
    </div>
</Layout>
