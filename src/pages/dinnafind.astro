const steps = [
    {
        number: '1',
        title: 'Tell Us Your Preferences',
        description: 'Share your dietary preferences, favorite cuisines, and budget range.'
    },
    {
        number: '2',
        title: 'Get Personalized Matches',
        description: 'Our AI analyzes thousands of options to find your perfect match.'
    },
    {
        number: '3',
        title: 'Browse & Compare',
        description: 'View menus, photos, reviews, and real-time availability.'
    },
    {
        number: '4',
        title: 'Book & Enjoy',
        description: 'Reserve your table instantly and enjoy an amazing dining experience.'
    }
];

const testimonials = [
    {
        name: 'Sarah Johnson',
        role: 'Food Enthusiast',
        content: 'DinnaFind has completely changed how I discover restaurants. The recommendations are spot-on, and I love the real-time availability feature!',
